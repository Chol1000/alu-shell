#!/usr/bin/env bash
# Script for managing the manage_my_process script: start, stop, restart

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"
PROCESS_SCRIPT="./manage_my_process"  # Relative path to the script

case "$1" in
  start)
    if [ -f "$PID_FILE" ]; then
      echo "$PROCESS_NAME is already running"
    else
      $PROCESS_SCRIPT &
      echo $! > "$PID_FILE"
      echo "$PROCESS_NAME started"
    fi
    ;;
  stop)
    if [ -f "$PID_FILE" ]; then
      kill "$(cat "$PID_FILE")"
      rm -f "$PID_FILE"
      echo "$PROCESS_NAME stopped"
    else
      echo "$PROCESS_NAME is not running"
    fi
    ;;
  restart)
    if [ -f "$PID_FILE" ]; then
      kill "$(cat "$PID_FILE")"
      rm -f "$PID_FILE"
      echo "$PROCESS_NAME stopped"
    fi
    $PROCESS_SCRIPT &
    echo $! > "$PID_FILE"
    echo "$PROCESS_NAME restarted"
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
